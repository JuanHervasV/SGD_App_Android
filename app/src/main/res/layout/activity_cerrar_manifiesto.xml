<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.notbytes.barcodereader.CerrarManifiestoAct">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="onClick"
        android:text="Cerrar Manifiesto"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="vertical">

        <RelativeLayout
            android:id="@+id/layoutscroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            
    <TextView
        android:id="@+id/txtMfto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manifiesto"
        android:layout_alignParentStart="true"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="175dp"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txtPesoTotal"
        android:layout_below="@id/txtMfto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Peso"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        android:textSize="20dp"

        />

    <Button
        android:id="@+id/btnAgregarValija"
        android:layout_width="147dp"
        android:layout_height="49dp"
        android:layout_marginTop="88dp"
        android:layout_below="@+id/txtPesoTotal"
        android:background="@drawable/rounded_cornersscharff"
        android:onClick="onClick"
        android:text="Agregar Valija"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btnCerrar"
        android:layout_width="157dp"
        android:layout_height="49dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/rounded_cornersscharff"
        android:onClick="onClick"
        android:layout_below="@+id/btnAgregarValija"
        android:text="Cerrar Manifiesto"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
    </ScrollView>



</RelativeLayout>
