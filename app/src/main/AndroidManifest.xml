<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.notbytes.barcodereader">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        android:usesCleartextTraffic="true"
        android:configChanges="orientation"
        android:screenOrientation="portrait">
        <activity android:name=".splash_screen"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PopupCerrarValija"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".DespacharFinal"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".CerrarManifiestoAct"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".CerrarValijaAct"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".GuiaAct"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".ValijaAct"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".ManifiestoAct"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".Pre_estado"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".sinametm"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".Logeo"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".PopUp"
            android:theme="@style/AppTheme.CustomTheme"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".MenuPrincipal"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
    </application>

</manifest>